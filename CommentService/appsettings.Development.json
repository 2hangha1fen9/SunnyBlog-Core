{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  //端口配置
  "port": 8083,
  //是否开启Https,填写证书路径自动开启
  "httpsCertPath": null,
  "httpsCertPwd": null,
  //数据库配置
  "SqlServer": "server=.;database=sunnyblog;uid=sa;pwd=1;pooling=true",
  //Redis缓存配置
  "RedisServer": "10.42.0.1:6379",
  //注册中心配置
  "Consul": {
    "ServiceName": "CommentService",
    "ServiceIP": "localhost",
    "ServicePort": 8083,
    "Schema": "http",
    "ServiceHealthCheck": "http://localhost:8083/api/HealthCheck",
    "ConsulAddress": "http://localhost:8500"
  },
  //是否开启SkyWalking链路追踪（需要配置skyapm.json）
  "useSkywalking": false,
  //是否使用Apollo配置中心获取配置
  "useApollo": false,
  //Apollo配置中心
  "Apollo": {
    "AppId": "SunnyBlog",
    "Env": "DEV",
    "MetaServer": "http://10.42.0.1:28080",
    "ConfigServer": [ "http://10.42.0.1:28080" ]
  }
}
